}
.fc .fc-button-group>*{
   background-color: #4897D8 !important;
    color: #000;
    font-weight: bold;
    border: solid 2px;
    border-color: #4897D8;  
}
.fc .fc-button-group>*:visited{
  color:red;

}



.fc-icon-right-single-arrow:after{
  color: #000;
}


.fc-head{
background-color: #919196;
}
.fc-toolbar.fc-header-toolbar{

  margin-bottom: 0em;
  margin:3px;
  color: #919196;
}


  .fc-view-container {
    background-color: #efefef;
  }
 #calendar {
      float: right;
      width: 74%;
      margin-bottom: 1em;
      border-left: solid 8px;
      border: solid 9px;
    border-color: #d9d9db;
    }
    

    #sidebar {
      width: 25%;
      background-color: #efefef;
      height: 100%;
      position: fixed!important;
      z-index: 1;
      overflow: auto
    }

    #sidebarToggle {
      cursor: pointer;
      position: absolute;
      padding: 0;
      margin: 0;
      right: 0;
      top: 50%;
      z-index: 100;
      -webkit-transform: rotate(-90deg);
      -moz-transform: rotate(-90deg);
      -o-transform: rotate(-90deg);
      -ms-transform: rotate(-90deg);
      transform: rotate(-90deg);
    }

    #taskDetails {
      display: none;
    }

    .modalContainer {
      background-color: #fefefe;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 40%;
    }

    .modal {
      position: fixed;
      /* Stay in place */
      z-index: 1;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: auto;
      /* Enable scroll if needed */
      background-color: rgb(0, 0, 0);
      /* Fallback color */
      background-color: rgba(0, 0, 0, 0.4);
      /* Black w/ opacity */
    }

    .modal .close {
      cursor: pointer;
      font-size: 2em;
      float: right;
    }

    .modalContent {
      width: 90%;
    }


    .task {
      cursor: pointer;
    }

    a.claimed {
      background-color: green;
      border-color: green;
    }

    a.unclaimed {
      background-color: red;
      border-color: red;
    }

  </style>

</head>

<body id={{calinfo.calendarId}}>

  <div class="sidebar bar-block" id="sidebar">
    <div id="sidebarToggle">hide</div>
    <!-- <button id="close"> &times;</button> -->
    <h3>Members</h3>
    <ul>
      {{#each meminfo}}
        {{#if @first}}
          <li><a href="#">{{this.firstName}}</a><span class="admin"> (admin)</span></li>
        {{else}}
          <li><a href="#">{{this.firstName}}</a></li>
        {{/if}}
      {{/each}}
    </ul>

    <button id="addtask">Add task</button>

   </div>

  <div id="calendar"></div>

  <!-- Modals -->
  <div id="taskDetails" class="modal">
    <div class="modalContainer">
      <div class="close">&times;</div>
      <div class="modalContent">
      </div>
      <div class="claimStatus">
      </div>
    </div>
  </div>

  <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.js"></script>

  <script src="https://unpkg.com/flatpickr"></script>

  <script src="/javascripts/calendar.js"></script>

